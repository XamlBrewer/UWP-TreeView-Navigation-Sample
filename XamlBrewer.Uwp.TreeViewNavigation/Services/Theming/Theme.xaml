<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Theme Resources -->

    <!-- Accent Color Override-->
    <!-- See App.xaml -->

    <!-- Header -->
    <Color x:Key="TitlebarButtonForegroundColor">OrangeRed</Color>
    <SolidColorBrush x:Key="HamburgerForegroundBrush"
                     Color="OrangeRed" />

    <!-- Splitview Pane -->
    <AcrylicBrush x:Key="SplitViewInlineBackgroundBrush"
                  BackgroundSource="HostBackdrop"
                  TintOpacity="0.6"
                  FallbackColor="#ffe6ff" />
    <AcrylicBrush x:Key="SplitViewOverlayBackgroundBrush"
                  BackgroundSource="Backdrop"
                  TintOpacity="0.6"
                  FallbackColor="#ffe6ff" />

    <!-- Splitview Content -->
    <Color x:Key="PageBackgroundColor">Gainsboro</Color>
    <SolidColorBrush x:Key="PageBackgroundBrush"
                     Color="Gainsboro" />
    <SolidColorBrush x:Key="PageTitleBrush"
                     Color="LightCyan" />
    <SolidColorBrush x:Key="PageForegroundBrush"
                     Color="#FF0E0E3F" />
</ResourceDictionary>
